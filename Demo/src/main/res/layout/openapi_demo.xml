<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/title_layout"/>
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/group_btn"
       android:orientation="vertical"
       android:layout_marginLeft="@dimen/_outer_01"
    android:layout_marginRight="@dimen/_outer_01"
       >
    
    <Button
        android:id="@+id/btn_get_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/zalosdk_button00"
        android:text="Get profile"
        android:textColor="@color/zalosdk_white"
        android:onClick="getprofileclick"
         />
    
    <Button
        android:id="@+id/btn_get_friend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/zalosdk_button00"
        android:text="Get Friend List"
        android:textColor="@color/zalosdk_white"
        android:onClick="getfriendlist_click"
         />
    <TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Output: "
           android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
          />
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        
        <TextView
             android:id="@+id/output_value"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:text="" />
     
    </ScrollView>
    </LinearLayout>
</LinearLayout>
</ScrollView>