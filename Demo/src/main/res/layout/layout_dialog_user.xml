<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/zalosdk_button00" >

     <ImageView
        android:id="@+id/btn_back" 
        android:visibility="gone"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_arrow" />
    
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Profile"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/zalosdk_white" />

    <ImageView
        android:id="@+id/btn_avatar_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_close_web"
         />

</RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        />

    <LinearLayout 
        android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
   		 android:orientation="vertical">
        
        <TextView 
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zalosdk_zalo_blue"
            android:text=""
            android:layout_margin="5dp"/>
        
        <TextView 
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zalosdk_zalo_blue"
            android:text=""
            android:layout_margin="5dp"/>
          <TextView 
            android:id="@+id/login_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zalosdk_zalo_blue"
            android:text=""
            android:layout_margin="5dp"/>
        <TextView
	        android:id="@+id/btn_logout"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:background="@color/zalo_blue"
	        android:text="Logout"
	        android:textColor="@color/zalosdk_white"
	        android:layout_marginBottom="10dp"
         />
        
    </LinearLayout>	
</LinearLayout>
</LinearLayout>